{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block loginRegister %}

    <body id="LoginForm">
    <div class="container">
        <div class="login-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="main-div">
                <div class="panel">
                    <h2>Login</h2>
                    <p>Please enter your email and password</p>
                </div>
                <form class="form-login" method="post">

                    <div class="form-group">
                        <input type="email" value="{{ last_username }}"  name="email" class="form-control" id="inputEmail" placeholder="Email Address">
                    </div>

                    <div class="form-group">
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn btn-primary" href="index.html" type="submit"><i class="fa fa-lock"></i> SIGN IN</button>

                </form>
                <hr>
                <div class="registration">
                    Don't have an account yet?<br/>
                    <a class="" href="{{ path('app_register')}}">
                        Create an account
                    </a>
                </div>
            </div>
        </div>
    </div>
    </body>

{% endblock %}