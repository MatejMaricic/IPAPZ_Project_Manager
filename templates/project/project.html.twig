{% extends 'base.html.twig' %}
{% block title %}
    Project page
{% endblock %}
{% block body %}

    <div class="container">
        <div class="row">
            {% for status in project.projectStatus %}
                <div class="col">
                    <h1>{{ status.name }}</h1>
                </div>
            {% endfor %}

        </div>
    </div>

    <div class="container">
        <div class="row">

                <div class="col-3">
                    <div class="card text-white bg-info mb-3">
                        <span class="project-icon text-center"><i class="fa fa-tasks"></i></span>
                        <div class="card-body">
                            <h5 class="card-title"></h5>
                            <p class="card-text"></p>
                            <a href="#" class="btn btn-primary">Open Task</a>
                        </div>
                    </div>
                </div>
            <a href="{{  path('task_view', {'id': project.id}) }}">Add Task</a>

        </div>
    </div>

    <div class="modal fade" id="devForm" tabindex="-1" role="dialog" aria-labelledby="projectFormTitle" aria-hidden="true">
        {{ form_start(form) }}
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add New Project</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.firstName) }}
                                {{ form_row(form.lastName) }}
                                {{ form_row(form.email) }}
                                {{ form_row(form.plainPassword.first) }}
                                {{ form_row(form.plainPassword.second) }}
                                {{ form_row(form.plainPassword) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save project</button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock  %}