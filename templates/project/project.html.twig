{% extends 'base.html.twig' %}
{% block myTasks %}
    <li><i class="fa fa-folder"></i><a href="{{ path('my_tasks', {'id': project.id}) }}">My Tasks</a></li>
{% endblock %}
{% block projectSidebar %}
    <li><i class="fa fa-users"></i><a href="#" data-toggle="modal" data-target="#assignDevForm">Assign Developer</a></li>
{% endblock %}
{% block title %}
    Project page
{% endblock %}
{% block body %}


    <div class="container-fluid">

        <div class="row">
            <div class="col-6">
                <div class="card text-white bg-info mb-5">
                    <span class="project-icon text-center"><i class="fa fa-tasks"></i></span>
                    <div class="card-body">
                        <h2 class="card-title">Tasks</h2>

                        <p class="card-text"> <h3>Show all Tasks for this project</h3> </p>

                        <a href="{{ path('project_tasks', {'id': project.id}) }}" class="btn btn-success">
                            Open
                        </a>

                    </div>
                </div>
            </div>


            <div class="col-6">
                <div class="card text-white bg-info mb-5">
                    <span class="project-icon text-center"><i class="fa fa-tasks"></i></span>
                    <div class="card-body">
                        <h2 class="card-title">Discussions</h2>

                        <p class="card-text"><h3>Show all Discussions for this project</h3> </p>

                        <a href="{{ path('project_discussions', {'id': project.id}) }} " class="btn btn-success">
                            Open
                        </a>

                    </div>
                </div>
            </div>

        </div>
    </div>


    <div class="modal fade" id="assignDevForm" tabindex="-1" role="dialog" aria-labelledby="devFormTitle"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                {{ form_start(devForm) }}
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Assign developer</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col" id="developer-selection">
                                <p>
                                    {% for user in devForm.users %}
                                        {{ form_row(user) }}
                                    {% endfor %}

                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Assign developer</button>

                </div>
                {{ form_end(devForm) }}
            </div>
        </div>
    </div>




{% endblock %}