{% extends 'base.html.twig' %}
{% block projectSidebar %}
    <li><i class="fa fa-users"></i><a href="#" data-toggle="modal" data-target="#taskForm">Add Task</a></li>
{% endblock %}
{% block title %}
    Project page
{% endblock %}
{% block body %}


    <div class="container">
        <div class="row">
            {% for status in project.projectStatus %}
                <div class="col">
                    <h1>{{ status.name }}</h1>
                    {% for task in project.task %}
                        {% if task.status.id == status.id %}
                            <div class="card text-white bg-info mb-3" id="task-{{ task.id }}">
                                    <span class="project-icon text-center"><i class="fa fa-tasks"></i></span>
                                <div class="card-body">
                                    <h5 class="card-title">{{ task.name }}</h5>
                                    <p class="card-text">{{ task.content }}</p>
                                    <a href="{{ path('task_delete', {'id': task.id}) }}"
                                       class="btn btn-danger removeTask">
                                        <i class="fa fa-trash"></i>
                                        <a href="{{ path('task_view', {'id': task.id}) }}" class="btn btn-primary">Open Task</a>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}

        </div>
    </div>




    <div class="modal fade" id="taskForm" tabindex="-1" role="dialog" aria-labelledby="projectFormTitle"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add New Task</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                {{ form_start(taskForm) }}
                                {{ form_row(taskForm.name) }}
                                {{ form_row(taskForm.content) }}
                                {{ form_row(taskForm.status) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Task</button>
                    {{ form_end(taskForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}